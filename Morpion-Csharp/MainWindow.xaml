<Window x:Class="Morpion_Csharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Morpion_Csharp"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
	<Grid>
		<StackPanel x:Name="PanelJoueurs" HorizontalAlignment="Center" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="772" Orientation="Horizontal">
			<Label Content="Joueur 1 : " VerticalAlignment="Center" Margin="0,37" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
			<TextBox TextWrapping="Wrap" Text="TextBox" Width="120" VerticalAlignment="Center"/>
			<Label Content="Joueur 2 : " VerticalAlignment="Center" Margin="0,37" Width="101" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
			<TextBox TextWrapping="Wrap" Text="TextBox" Width="120" VerticalAlignment="Center"/>
			<Button Content="Jouer !" Width="100" VerticalAlignment="Center" Margin="100,40,0,40" HorizontalContentAlignment="Center" HorizontalAlignment="Center"/>
		</StackPanel>
		<Grid x:Name="GrilleMorpion" HorizontalAlignment="Left" Height="544" Margin="10,115,0,0" VerticalAlignment="Top" Width="544">
			<Image x:Name="imgTL" HorizontalAlignment="Left" Height="100" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Source="Images/j0.png" MouseDown="Img_MouseDown"/>
			<Image x:Name="imgTC" HorizontalAlignment="Left" Height="100" Margin="115,10,0,0" VerticalAlignment="Top" Width="100" Source="Images/j0.png" MouseDown="Img_MouseDown"/>
			<Image x:Name="imgTR" HorizontalAlignment="Left" Height="100" Margin="220,10,0,0" VerticalAlignment="Top" Width="100" Source="Images/j0.png" MouseDown="Img_MouseDown"/>
			<Image x:Name="imgML" HorizontalAlignment="Left" Height="100" Margin="10,115,0,0" VerticalAlignment="Top" Width="100" Source="Images/j0.png" MouseDown="Img_MouseDown"/>
			<Image x:Name="imgMC" HorizontalAlignment="Left" Height="100" Margin="115,115,0,0" VerticalAlignment="Top" Width="100" Source="Images/j0.png" MouseDown="Img_MouseDown"/>
			<Image x:Name="imgMR" HorizontalAlignment="Left" Height="100" Margin="220,115,0,0" VerticalAlignment="Top" Width="100" Source="Images/j0.png" MouseDown="Img_MouseDown"/>
			<Image x:Name="imgBL" HorizontalAlignment="Left" Height="100" Margin="10,220,0,0" VerticalAlignment="Top" Width="100" Source="Images/j0.png" MouseDown="Img_MouseDown"/>
			<Image x:Name="imgBC" HorizontalAlignment="Left" Height="100" Margin="115,220,0,0" VerticalAlignment="Top" Width="100" Source="Images/j0.png" MouseDown="Img_MouseDown"/>
			<Image x:Name="imgBR" HorizontalAlignment="Left" Height="100" Margin="220,220,0,0" VerticalAlignment="Top" Width="100" Source="Images/j0.png" MouseDown="Img_MouseDown"/>
		</Grid>
		<StackPanel x:Name="PanelActions" HorizontalAlignment="Left" Height="544" Margin="559,115,0,0" VerticalAlignment="Top" Width="223">
		</StackPanel>

	</Grid>
</Window>
